# templates/postgresql.conf.j2
listen_addresses = '*'          # Accept connections from all interfaces
port = 5432                     # Default port for PostgreSQL
max_connections = 100           # Maximum number of concurrent connections
shared_buffers = 128MB          # Adjust buffer size based on your system
effective_cache_size = 4GB      # Adjust cache size based on your system
work_mem = 4MB                  # Memory used for internal query operations
maintenance_work_mem = 64MB     # Memory used for maintenance operations